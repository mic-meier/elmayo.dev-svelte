{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020", "DOM"],
		"moduleResolution": "node",
		"module": "es2020",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2020",
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@routes/*": ["src/routes*"],
			"$lib":["src/lib"],
			"$lib/*":["src/lib/*"]
		}
	},
	"exclude": ["src/routes/blog/layout.svelte", "node_modules/*", "public/*"]
}
